rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isAdmin() {
      return request.auth != null
        && request.auth.token.email == "edu.netto.smedeiros@hotmail.com";
    }

    match /userProfiles/{userId} {
      allow read: if isAdmin()
        || (request.auth != null && request.auth.uid == userId);
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update, delete: if isAdmin();
    }

    match /households/{householdId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /households/{householdId}/{collectionName}/{documentId} {
      allow read, write: if request.auth != null
        && get(/databases/$(database)/documents/userProfiles/$(request.auth.uid)).data.householdId == householdId;
    }

    match /users/{userId}/{collectionName}/{documentId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if false;
    }
  }
}
